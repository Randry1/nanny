<%= form_for(nursemaid, html: {multipart: true})  do |f| %>
    <% if nursemaid.errors.any? %>
        <div id="error_explanation" class="alert alert-danger">
          <h2><%= t('common.errors') %></h2>

          <ul>
            <% nursemaid.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :education %>
      <%= f.text_field :education, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :experience %>
      <%= f.text_field :experience, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :medicine %>
      <%= f.text_field :medicine, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :price %>
      <%= f.text_field :price, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :video %>
      <%= f.text_field :video, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :description %>
      <%= f.text_field :description, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :image %>
      <%= f.file_field :image %>
    </div>

    <div class="form-group">
      <%= f.submit 'Отправить', class: 'btn btn-primary' %>
      <%= link_to 'Назад', :back, class: 'btn btn-default' %>
    </div>
<% end %>