<%= form_for(nursemaid)  do |f| %>
    <% if nursemaid.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(nursemaid.errors.count, "error") %> Данные не были сохранены:</h2>

          <ul>
            <% nursemaid.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :education %>
      <%= f.text_field :education, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :experience %>
      <%= f.text_field :experience, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :medicine %>
      <%= f.text_field :medicine, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :price %>
      <%= f.text_field :price, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :video %>
      <%= f.text_field :video, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.submit 'Отправить', class: 'form-control' %>
    </div>
<% end %>